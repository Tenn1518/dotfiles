#
# .zsh_aliases
#

# Edit and source zsh configuration file
alias vp="nvim ~/.zshrc"
alias sp="source ~/.zshrc"
# Uncomment following line if you are using emacs
# alias ep="emacs ~/.zshrc"

# Edit nvim configuration file
alias vimrc="nvim ~/.config/nvim/init.vim"

# Edit and source zsh alias definition file
# alias ea="emacs ~/.zsh_aliases"
alias va="nvim ~/.zsh_aliases"

# Shorten nvim
alias nv="nvim"

# Redirect vi and vim commands to nvim
alias vi="nvim"
alias vim="nvim"

# Forces ls command to use colors
alias ls="ls --color=auto"

# Git mode
alias gitm="source ~/.gitmode"

# ls command with flags
alias la="ls -A"
alias ll="ls -l"
alias lla="ls -lA"

# Changes directory to where I put my GitHub projects
alias cdgh="cd ~/.stuff/github && ls"

# Shorten dnf commands
alias pin="sudo dnf install"
alias prm="sudo dnf remove"
alias ps="dnf search"
alias prin="sudo dnf reinstall"
alias psh="dnf show"
alias pre="sudo dnf copr enable"

# Replaces git with GitHub's hub command with added GitHub functionality
eval "$(hub alias -s)"

# Check the weather at a moment's notice
alias weather="curl wttr.in"

# Use emacs in a terminal
# alias temacs="emacs -nw"

# Shorten emacsclient command
# alias ec="emacsclient"
# alias tec="emacsclient -t"
